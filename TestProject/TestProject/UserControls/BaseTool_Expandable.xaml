<UserControl x:Class="TestProject.UserControls.BaseTool_Expandable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:uc="clr-namespace:TestProject.UserControls"
             mc:Ignorable="d"
			 Name="control"
			 Height="Auto"
			 Width="Auto">
	<StackPanel>
		<uc:BaseTool_Toggle x:Name="Toggle"/>
		<Popup x:Name="popupControl"
			   IsOpen="False"
			   PlacementTarget="{Binding ElementName=Toggle}"
			   StaysOpen="True"
			   Focusable="True">
			<ContentControl Content="{Binding PopupContent, ElementName=control}" />
		</Popup>
	</StackPanel>
</UserControl>
