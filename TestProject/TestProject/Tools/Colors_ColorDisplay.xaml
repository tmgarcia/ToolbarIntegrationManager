<UserControl x:Class="TestProject.Tools.Colors_ColorDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
			 Height="auto"
			 Width="auto">
	<Grid Height="auto"
		  Width="auto"
		  Name="grid">
		<Rectangle Name="AlphaBackground"
				   Margin="5"
				   VerticalAlignment="Center"
				   HorizontalAlignment="Center"
				   Height="10"
				   Width="10"
				   Fill="{StaticResource ResourceKey=PatternSquares}">
		</Rectangle>
		<Rectangle Name="ColorDisplay"
				   Margin="5"
				   VerticalAlignment="Center"
				   HorizontalAlignment="Center"
				   Height="10"
				   Width="10"
				   MouseMove="ColorDisplay_MouseMove">
			<Rectangle.Fill>
				<SolidColorBrush x:Name="ColorDisplayBrush"/>
			</Rectangle.Fill>
		</Rectangle>
	</Grid>
</UserControl>
